# Database Configuration
DATABASE_URL="file:./db/custom.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"

# SMS Service Configuration (for production)
SMS_API_KEY="your-sms-api-key"
SMS_SENDER_ID="LABOUR"
SMS_PROVIDER="twilio" # Options: twilio, msg91, firebase

# Twilio Configuration (if using Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# MSG91 Configuration (if using MSG91)
MSG91_AUTH_KEY="your-msg91-auth-key"
MSG91_TEMPLATE_ID="your-msg91-template-id"

# Payment Gateway Configuration
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"

# Google Services Configuration
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Firebase Configuration (for notifications and authentication)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY_ID="your-firebase-private-key-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# Email Service Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@labournow.in"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880" # 5MB in bytes
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Application Configuration
NODE_ENV="development"
PORT="3000"
APP_NAME="LabourNow"
APP_URL="http://localhost:3000"
SUPPORT_EMAIL="support@labournow.in"
SUPPORT_PHONE="+91-1800-123-4567"

# Security Configuration
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW="15" # minutes
RATE_LIMIT_MAX="100" # requests per window
SESSION_SECRET="your-session-secret-change-this"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
ANALYTICS_ID="your-google-analytics-id"

# Development Configuration
BROWSER_OPEN_URL="http://localhost:3000"
DEV_TOOLS="true"